---
import { useTranslations } from '../i18n/utils';

interface AboutData {
    name: string;
    position: string;
    tagLine: string;
    summary: string[];
}

export interface Props {
  lang: string;
  aboutData: AboutData;
}

const { lang, aboutData } = Astro.props;
const t = useTranslations(lang as any);
---

<section id="landing" class="bg-gradient-to-tr from-blue-50 to-purple-50">
    <div class="container flex flex-col mx-auto justify-center text-center items-center px-4">
        <h1 class="text-5xl md:text-7xl font-bold font-heading mb-4 bg-gradient-to-r from-[var(--primary)] to-[var(--secondary)] bg-clip-text text-transparent">
            {aboutData.name}
        </h1>
        <h2 class="text-2xl md:text-3xl font-medium text-[var(--dark)]/80 mb-8">
            {aboutData.position}
        </h2>
        <p class="text-xl md:text-2xl max-w-2xl text-[var(--dark)]/70 mb-16">
            {aboutData.tagLine}
        </p>
        <div id="landing-buttons" class="flex flex-col sm:flex-row gap-8">
            <a 
                href="#projects"
                class="px-6 py-3 rounded-full bg-black text-white font-medium shadow-lg hover:shadow-xl
                    hover:-translate-y-1 bg-gradient-to-tr from-[var(--primary)] to-[var(--secondary)]"
            >{t('landing.viewWork')}</a>
            <a 
                href="#contact"
                class="px-6 py-3 rounded-full hover:-translate-y-1 font-medium 
                    shadow-lg hover:shadow-xl bg-white text-[var(--dark)] border border-gray-200"
            >{t('landing.letsConnect')}</a>
        </div>
    </div>
</section>