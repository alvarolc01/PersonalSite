---
import { useTranslations } from '../i18n/utils';

interface AboutData {
    name: string;
    position: string;
    tagLine: string;
    summary: string[];
}

export interface Props {
  lang: string;
  aboutData: AboutData;
}

const { lang, aboutData } = Astro.props;
const t = useTranslations(lang as any);
---
<section id="about" class="bg-white">
    <div class="container mx-auto px-4">
        <h2 class="section-title">
            {t('nav.about')}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div class="order-2 md:order-1">
                {aboutData.summary.map(paragraph => (
                    <p class="text-lg mb-4 leading-relaxed text-[var(--dark)]/80">
                        {paragraph}
                    </p>    
                ))}
            </div>

            <div class="flex justify-center order-1 md:order-2">
                <div class="w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden border-4 border-white shadow-xl">
                    <img 
                        src="/profile_picture.jpeg" 
                        alt="Profile picture"
                        class="w-full h-full object-cover"
                        onerror="this.src='https://via.placeholder.com/400x400?text=Profile+Photo'"
                    />
                </div>
            </div>
        </div>
    </div>
</section>